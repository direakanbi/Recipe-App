<div class="container mt-3 d-flex flex-column align-items-center">
  <h1>Food List</h1>
  <% if current_user %>
  <%= link_to "Add Food", new_food_path, class: "btn btn-primary align-self-end" %>
    <!-- No layout design, it will look better on navbar -->
    <% if @foods.empty? %>
      <div>
        <h3 class="text-center">No Foods yet.</h3>
      </div>
    <% else %>
      <table class= "table p-3 m-3" >
  <thead>
    <th>Food</th>
    <th>Measurement Unit</th>
    <th>Unit Price($)</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.name %></td>
      <td><%= food.measurement_unit %><span>kg</span></td>
      <td><span>$</span><%= food.price %></td>
      <td>
        <% if user_signed_in? && food.user == current_user %>
        <%= form_for( food, method: :delete) do |f| %>
          <%= f.submit 'delete', class: 'cursor-pointer bg-danger' %>
        <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
    <% end %>
  <% end %>
</div>
